{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "removeComments": true,
    "outFile": "index.js",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "^/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "./**/*.spec.ts"
  ]
}
